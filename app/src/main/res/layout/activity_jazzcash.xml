<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Pay via JazzCash Mobile Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:background="@android:color/darker_gray"
                android:textColor="#fff"
                android:textAppearance="?android:textAppearanceSmall"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/gray_border"
                android:textSize="12sp"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="0dp"
                android:maxLines="10"
                android:text="• Please make sure that your JazzCash Account is Active and has sufficient balance.\n• Please enter your account's 5-digit pin when prompted on your mobile screen to complete the transaction."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--content container-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#333"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Mobile Number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:paddingLeft="15dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:hint="Mobile Number"
                        android:minHeight="50dp"
                        android:background="@drawable/black_border"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:textColor="#333"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Receiver's Mobile Number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:paddingLeft="15dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:hint="Receiver's Mobile Number"
                        android:minHeight="50dp"
                        android:background="@drawable/black_border"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:textColor="#fff"
                        android:background="#9D0A10"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Send payment via Jazz Cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />




                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
