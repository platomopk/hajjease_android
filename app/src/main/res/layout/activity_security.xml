<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ttb.bcp.security">

    <include layout="@layout/app_bar"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sirengreen"
            android:id="@+id/securityImage"
            android:layout_centerHorizontal="true"
            />


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout

            android:gravity="center"
            android:id="@+id/securityLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/securityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="NAME"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="#333"
                />

            <TextView
                android:id="@+id/securityAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Address"
                android:textSize="28dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#333"
                />
            <TextView
                android:id="@+id/securityTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Time of incidence"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="#333"
                />


        </LinearLayout>


    </LinearLayout>




        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/security_btn"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Picture"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="?borderlessButtonStyle"
            android:background="#333"
            android:textColor="#fff"
            />



    </RelativeLayout>



</LinearLayout>
